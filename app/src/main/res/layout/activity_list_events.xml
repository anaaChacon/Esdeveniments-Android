<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anabel.esdevenimentsvalencia.activities.ListEventsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/background_activity"
        android:alpha="0.7"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_botom_scroll"
            android:layout_marginRight="@dimen/margin_botom_scroll"
            android:layout_marginTop="@dimen/layout_image"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/logo_android"/>
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/camps"
                android:background="@color/colorDarkBlack">
            <TextView
                android:id="@+id/titleCat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/universal"
                android:gravity="center_vertical"
                android:textColor="@color/colorHintWhite"
                android:textSize="@dimen/subTitle" />
             <TextView
                 android:id="@+id/titleCatEvent"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textColor="@color/colorHintWhite"
                 android:textSize="@dimen/title"
                 android:textStyle="bold"
                 />
            </LinearLayout>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/containerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/top_image"
            android:layout_marginTop="@dimen/layout" />

    </LinearLayout>

</RelativeLayout>
