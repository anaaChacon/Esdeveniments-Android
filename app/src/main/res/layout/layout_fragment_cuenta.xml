<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorHintWhite"
    android:orientation="vertical"
    android:padding="@dimen/universal">

    <EditText
        android:id="@+id/etUsername"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_margin="@dimen/camps"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:layout_margin="@dimen/camps"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPassword"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/camps"
        android:ems="10"
        android:hint="@string/changePass"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/titles"
        android:background="@color/colorNotification"
        android:shadowRadius="5"
        android:text="@string/save"
        android:textColor="@color/colorHintWhite"
        android:textSize="@dimen/stringButton" />

    <TextView
        android:id="@+id/singOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_left"
        android:gravity="center"
        android:text="@string/sinOut"
        android:textSize="@dimen/title"
        android:textStyle="bold|italic" />

</LinearLayout>